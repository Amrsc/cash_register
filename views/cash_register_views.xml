
<odoo>
    
     <menuitem id="menu_cash_register_root" 
     name="Cash Register" 
     sequence="10"/>

        <record id="action_cash_register" model="ir.actions.act_window">
        <field name="name">Registres de caisse</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.register</field>
        <field name="view_mode">tree,form</field>
    </record> 
 
    
    <record id="action_cash_register_analysis" model="ir.actions.act_window">
        <field name="name">Registre de caisse analyses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.register.line</field>
        <field name="view_mode">tree</field>
        <field name="context">{'group_by': ['register_id']}</field>
    </record>

        <menuitem id="menu_cash_register" 
    name="Resgistres de caisse" 
    parent="menu_cash_register_root" 
    action="action_cash_register"
    sequence="10"/>

    <menuitem id="menu_cash_register_analysis" 
    name="Analyses" 
    parent="menu_cash_register_root" 
    action="action_cash_register_analysis"
    sequence="10"/>
    <record id="view_cash_register_tree" model="ir.ui.view">
        <field name="name">cash.register.tree</field>
        <field name="model">cash.register</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="opening_balance"/>
                <field name="current_balance"/>
                <field name="state" decoration-info="state == 'draft'"
                                        decoration-success="state == 'valide'"
                                           widget="badge"/>
            </tree>
        </field>
    </record>
    <record id="view_cash_register_form" model="ir.ui.view">
        <field name="name">cash.register.form</field>
        <field name="model">cash.register</field>
        <field name="arch" type="xml">
            <form>
            <header>
               <button name="action_comptabiliser" type="object" string="Fermer" states="draft" class="btn-primary" attrs="{'invisible': [('state', '=', 'valide')]}"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,valide"/>
            </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="journal_id"/>
                        <field name="opening_balance"/>
                        <field name="current_balance"/>
                    </group>
                    <notebook>
                        <page string="Lignes">
                            <field name="line_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="partner_id"/>
                                    <field name="department_id"/>
                                    <field name="description"/>
                                    <field name="account_id"/>
                                    <field name="credit"/>
                                    <field name="debit"/>
                                    <field name="balance"/>
                                    <field name="company_id" attrs="{'invisible': 1}"/>
                                    <field name="register_id" attrs="{'invisible': 1}"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
