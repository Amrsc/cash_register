<odoo>
    <template id="report_cash_register_template">
        <t t-call="web.external_layout">
         <main>
            <div class="page">
                <h2>Rapport de caisse régie</h2>
                <t t-foreach="docs" t-as="doc">
                    <table class="table table-sm">
                        <tr>
                            <th>Mois</th>
                            <td><t t-esc="doc.name"/></td>
                        </tr>
                        <tr>
                            <th>Balance d'ouverture</th>
                            <td><t t-esc="doc.opening_balance"/></td>
                        </tr>
                        <tr>
                            <th>Balance finale</th>
                            <td><t t-esc="doc.current_balance"/></td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td><t t-esc="doc.state"/></td>
                        </tr>
                        <tr>
                            <th>Journal</th>
                            <td><t t-esc="doc.journal_id.name"/></td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td><t t-esc="doc.date"/></td>
                        </tr>
                    </table>
                    <h3>Lignes</h3>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Bénéficiaire</th>
                                <th>Compte</th>
                                <th>Structure</th>
                                <th>Déscription</th>
                                <th>Credit</th>
                                <th>Debit</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.line_ids" t-as="line">
                                <tr>
                                    <td><t t-esc="line.date"/></td>
                                    <td><t t-esc="line.partner_id.name"/></td>
                                    <td><t t-esc="line.account_id.name"/></td>
                                    <td><t t-esc="line.department_id.name"/></td>
                                    <td><t t-esc="line.description"/></td>
                                    <td><t t-esc="line.credit"/></td>
                                    <td><t t-esc="line.debit"/></td>
                                    <td><t t-esc="line.balance"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </div>
            </main>
        </t>
    </template>
</odoo>
